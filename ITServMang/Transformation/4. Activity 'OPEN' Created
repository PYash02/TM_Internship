INSERT INTO _ITSM_ACTIVITIES ( 
INC_NUMBER 
, ACTIVITY_NAME 
, EVENTTIME 
, _USER 
, DEFINITION 
, SORTING 
) 
SELECT 
DISTINCT ITSM_Practice_Data.INC_NUMBER AS INC_NUMBER,
'Open' AS ACTIVITY_NAME, 
ITSM_Practice_Data.INC_SYS_CREATED_ON AS EVENTTIME, 
ITSM_Practice_Data.INC_RESOLVED_BY AS _USER, 
'OPEN' AS DEFINITION, 
7 AS SORTING FROM ITSM_Practice_Data 
where MI_DEFINITION IN ('Incident State Duration','Assignment Group','Priority Duration'); 

/* 
DELETE FROM _ITSM_ACTIVITIES; 
*/
