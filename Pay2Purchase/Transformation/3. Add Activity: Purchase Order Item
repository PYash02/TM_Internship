INSERT INTO _CEL_P2P_ACTIVITIES ( 
_CASE_KEY 
, _ACTIVITY_EN 
, _EVENTTIME 
, _SORTING 
) 
SELECT 
EKPO.MANDT || EKPO.EBELN || EKPO.EBELP AS _CASE_KEY 
, 'Create Purchase Order Item' AS _ACTIVITY_EN 
, EKKO.AEDAT AS _EVENTTIME 
, 20 AS _SORTING 
FROM EKPO 
JOIN EKKO ON 1=1 
AND EKPO.MANDT = EKKO.MANDT 
AND EKPO.EBELN = EKKO.EBELN 
AND EKKO.BSTYP = 'F' 
;
