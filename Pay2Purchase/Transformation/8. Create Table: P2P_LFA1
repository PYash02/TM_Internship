DROP TABLE IF EXISTS P2P_LFA1; 
CREATE TABLE P2P_LFA1 AS ( 
SELECT LFA1.* 
FROM LFA1 
WHERE EXISTS ( 
SELECT * FROM EKKO 
WHERE 1=1 
AND EKKO.BSTYP = 'F' 
AND EKKO.MANDT = LFA1.MANDT 
AND EKKO.LIFNR = LFA1.LIFNR 
AND EXISTS ( 
SELECT * FROM EKPO 
WHERE 1=1 AND EKPO.MANDT = EKKO.MANDT 
AND EKPO.EBELN = EKKO.EBELN 
)));
